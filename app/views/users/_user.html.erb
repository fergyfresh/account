<li>
  <%= link_to user.email, user %>

  <% if current_user.supervisor? and not user.supervisor? %>
    <%= button_to "promote", promote_path(user), {:class => "btn btn-success"} %>
  <% end %>
  <%= render partial: 'roster_form', locals: { user: user } %>
  <% if current_user.admin? %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
